/dts-v1/;
#include "imx6dl.dtsi"
#include "imx6qdl-wandboard.dtsi"

/ {
	model = "Wandboard i.MX6DL/SOLO rev B1";
	compatible = "wand,imx6dl-wandboard", "fsl,imx6dl";



	bcmdhd_wlan_0: bcmdhd_wlan@0 {
		compatible = "android,bcmdhd_wlan";
		pinctrl-0 = <&pinctrl_wifi_ctrl>;
		gpios = <&gpio1 29 0>;    /* WL_HOST_WAKE */
		wlreg_on-supply = <&wlreg_on>;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		wlreg_on: fixedregulator@100 {
			compatible = "regulator-fixed";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			regulator-name = "wlreg_on";
			gpio = <&gpio5 2 GPIO_ACTIVE_HIGH>;
			enable-active-high;
		};
	};

	gpio-edm {
		compatible = "gpio-edm";

		wl_on {
			label = "wl_on";
			gpios = <&gpio2 29 1>;
			dir   = "out";
		};

		wl_reg {
			label = "wl_reg";
			gpios = <&gpio1 26 1>;
			dir   = "out";
		};

		bluetooth-on {
			label = "bluetooth-on";
			gpios = <&gpio3 13 1>;
			dir   = "out";
		};

		bluetooth-wake {
			label = "bluetooth-wake";
			gpios = <&gpio3 14 1>;
			dir   = "in";
		};

		bluetooth-host-wake {
			label = "bluetooth-host-wake";
			gpios = <&gpio3 15 1>;
			dir   = "in";
		};
	};


	v4l2_cap_2 {
		compatible = "fsl,imx6dl-v4l2-capture";
		ipu_id = <1>;
		csi_id = <0>;
		mclk_source = <0>;
		status = "okay";
	};

	v4l2_cap_3 {
		compatible = "fsl,imx6dl-v4l2-capture";
		ipu_id = <1>;
		csi_id = <1>;
		mclk_source = <0>;
		status = "okay";
	};

};

&i2c2 {
	clock-frequency = <400000>;

	tp2854_mipi: tp2854_mipi@44 {
		compatible = "techpoint,tp2854_mipi";
		reg = <0x44>;
		clocks = <&clks 201>;
		clock-names = "csi_mclk";
		csi_id = <0>;
		mclk = <27000000>;
		mclk_source = <0>;
	};
};

&mipi_csi {
	status = "okay";
	lanes = <4>;

	mipi-csi2-channel@0 {
		ipu_id = <0>;
		csi_id = <0>;
		v_channel = <0>;
		status = "okay";
	};

	mipi-csi2-channel@1 {
		ipu_id = <0>;
		csi_id = <1>;
		v_channel = <1>;
		status = "okay";
	};

	mipi-csi2-channel@2 {
		ipu_id = <1>;
		csi_id = <0>;
		v_channel = <2>;
		status = "okay";
	};

	mipi-csi2-channel@3 {
		ipu_id = <1>;
		csi_id = <1>;
		v_channel = <3>;
		status = "okay";
	};
};

&ldb {
	lvds-channel@0 {
		crtc = "ipu1-di0";
	};
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

#if 0
&mxcfb3 {
	status = "okay";
};

&mxcfb4 {
	status = "okay";
};
#endif

&epdc {
	status = "disabled";
};

&iomuxc {
	pinctrl-names = "default";

	imx6qdl-wandboard {

		pinctrl_wifi_ctrl: wifi_ctrlgrp {
			fsl,pins = <
				MX6QDL_PAD_EIM_A25__GPIO5_IO02	  0x000b0			/* wifi-reset */
				MX6QDL_PAD_EIM_EB1__GPIO2_IO29	  0x000b0			/* wifi-on */
				MX6QDL_PAD_ENET_RXD1__GPIO1_IO26  0x000b0			/* wifi-reg */
				MX6QDL_PAD_ENET_TXD1__GPIO1_IO29  0x80000000		/* wifi-host-wake */

			>;
		};

		pinctrl_bt_ctrl: bt_ctrlgrp {
			fsl,pins = <
				MX6QDL_PAD_EIM_DA13__GPIO3_IO13		0x000b0		/* bluetooth-reg-on */
				MX6QDL_PAD_EIM_DA14__GPIO3_IO14		0x80000000	/* bluetooth-wake */
				MX6QDL_PAD_EIM_DA15__GPIO3_IO15		0x80000000	/* bluetooth-host-wake */
			>;
		};
	};
};
